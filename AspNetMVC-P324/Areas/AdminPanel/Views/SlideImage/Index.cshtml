@model List<SliderImage>

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slide images</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <a class="btn btn-primary" asp-action="multipleCreate">Create multiple</a>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sekil</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img  src="~/img/@item.Name"/></td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                            </form>
                                        </div>                 
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>